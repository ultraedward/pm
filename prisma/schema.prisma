generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  name          String?
  image         String?
  stripeStatus  String       @default("free")
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  alerts        Alert[]
  alertTriggers AlertTrigger[]
  emailLogs     EmailLog[]
}

model Alert {
  id        String   @id @default(cuid())
  metal     String
  threshold Float
  direction String
  active    Boolean  @default(true)
  userId    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  triggers  AlertTrigger[]
}

model AlertTrigger {
  id        String   @id @default(cuid())
  alertId  String
  userId   String
  price    Float
  triggered Boolean  @default(false)
  createdAt DateTime @default(now())

  alert Alert @relation(fields: [alertId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}

model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  to        String
  subject   String
  status    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
