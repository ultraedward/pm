generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  alerts    Alert[]
}

model Alert {
  id        String   @id @default(cuid())
  userId   String
  metal     String
  condition String
  threshold Float
  createdAt DateTime @default(now())

  user      User          @relation(fields: [userId], references: [id])
  triggers  AlertTrigger[]
}

model AlertTrigger {
  id          String     @id @default(cuid())
  alertId     String
  price       Float?
  triggeredAt DateTime?   // âœ… MUST be nullable
  createdAt   DateTime    @default(now())

  alert       Alert       @relation(fields: [alertId], references: [id])

  @@index([alertId])
}

model PriceHistory {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  timestamp DateTime @default(now())

  @@index([metal, timestamp])
}
