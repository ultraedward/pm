generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String?
  stripeStatus      String   @default("inactive")
  stripeCustomerId  String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  alerts            Alert[]
}

model Alert {
  id         String   @id @default(cuid())
  userId     String
  metal      String
  direction  String
  threshold  Float
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}
