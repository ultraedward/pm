generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Alert {
  id        String   @id @default(cuid())
  metal     String
  target    Float
  direction String
  createdAt DateTime @default(now())
}

model AlertTrigger {
  id        String   @id @default(cuid())
  alertId   String
  metal     String
  price     Float
  createdAt DateTime @default(now())
}

model SpotPriceCache {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  source    String   @default("manual")
  createdAt DateTime @default(now())
}

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  status    String
  createdAt DateTime @default(now())
}
