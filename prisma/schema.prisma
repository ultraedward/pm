generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String         @id @default(uuid())
  email     String         @unique
  alerts    Alert[]
  emailLogs EmailLog[]
  triggers  AlertTrigger[]
  createdAt DateTime       @default(now())
}

model Alert {
  id        String   @id @default(uuid())
  metal     String
  direction String
  threshold Float
  active    Boolean  @default(true)

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  triggers  AlertTrigger[]

  createdAt DateTime @default(now())
}

model EmailLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  status    String
  error     String?
  createdAt DateTime @default(now())
}

model AlertTrigger {
  id        String   @id @default(uuid())

  alertId   String
  alert     Alert    @relation(fields: [alertId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  metal     String
  price     Float
  triggered Boolean

  createdAt DateTime @default(now())
}
