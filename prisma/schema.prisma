generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  alerts Alert[]
}

model Subscription {
  id                   String   @id @default(cuid())
  stripeSubscriptionId String?  @unique
  stripeCustomerId     String?
  status               String
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  userId               String?
  createdAt            DateTime @default(now())
}

model PriceHistory {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  createdAt DateTime @default(now())

  @@index([metal, createdAt])
}

model Alert {
  id        String   @id @default(cuid())
  userId    String
  metal     String
  target    Float
  direction String
  active    Boolean  @default(true)
  email     String?
  createdAt DateTime @default(now())

  user     User           @relation(fields: [userId], references: [id])
  triggers AlertTrigger[]
  emails   EmailLog[]

  @@index([userId])
  @@index([metal])
}

model AlertTrigger {
  id          String   @id @default(cuid())
  alertId     String
  metal       String
  target      Float
  direction   String
  price       Float
  fingerprint String   @unique
  triggeredAt DateTime @default(now())

  alert Alert @relation(fields: [alertId], references: [id], onDelete: Cascade)

  @@index([alertId])
}

model EmailLog {
  id        String   @id @default(cuid())
  alertId   String
  to        String
  subject   String
  status    String   @default("queued") // queued | sent | failed
  attempts  Int      @default(0)
  error     String?
  createdAt DateTime @default(now())
  sentAt    DateTime?

  alert Alert @relation(fields: [alertId], references: [id], onDelete: Cascade)

  @@index([alertId])
}

model CronLock {
  name      String   @id
  lockedAt  DateTime
  expiresAt DateTime
}

model CronControl {
  id          Int      @id @default(1)
  cronEnabled Boolean  @default(true)
  updatedAt   DateTime @updatedAt
}

model CronRun {
  id          String   @id @default(cuid())
  name        String
  status      String   // running | success | failed | skipped
  message     String?
  startedAt   DateTime @default(now())
  finishedAt  DateTime?
  durationMs  Int?

  @@index([name, startedAt])
}