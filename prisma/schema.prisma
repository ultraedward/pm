// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  image        String?
  stripeStatus String   @default("free")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  alerts        Alert[]
  alertTriggers AlertTrigger[] // ✅ inverse relation
}

model Alert {
  id         String   @id @default(cuid())
  metal      String
  direction  String   // above | below
  threshold  Float
  active     Boolean  @default(true)
  createdAt DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])

  triggers AlertTrigger[] // ✅ inverse relation
}

model AlertTrigger {
  id        String   @id @default(cuid())
  alertId  String
  userId   String
  price    Float
  triggered Boolean @default(false)
  createdAt DateTime @default(now())

  alert Alert @relation(fields: [alertId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}
