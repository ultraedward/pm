generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  alerts        Alert[]
  alertTriggers AlertTrigger[]
  emailLogs     EmailLog[]
}

model Alert {
  id        String   @id @default(cuid())
  metal     String
  direction String
  threshold Float
  active    Boolean @default(true)
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  triggers AlertTrigger[]
}

model AlertTrigger {
  id        String   @id @default(cuid())
  price     Float
  triggered Boolean @default(true)
  createdAt DateTime @default(now())

  alertId String
  alert   Alert @relation(fields: [alertId], references: [id])

  userId String
  user   User  @relation(fields: [userId], references: [id])
}

model SpotPriceCache {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  source    String
  createdAt DateTime @default(now())
}

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  status    String
  provider  String
  error     String?
  createdAt DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}
