generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Subscription {
  id                   String   @id @default(cuid())
  stripeSubscriptionId String?  @unique
  stripeCustomerId     String?
  status               String
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  userId               String?
  createdAt            DateTime @default(now())
}

model PriceHistory {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  createdAt DateTime @default(now())
}

model Alert {
  id        String   @id @default(cuid())
  metal     String
  target    Float
  direction String
  active    Boolean  @default(true)

  // Email routing (safe to be nullable so existing alerts don't break migration)
  email     String?

  createdAt DateTime @default(now())

  triggers  AlertTrigger[]
}

model AlertTrigger {
  id          String   @id @default(cuid())
  alertId     String
  metal       String
  target      Float
  direction   String
  price       Float
  triggeredAt DateTime @default(now())

  // Used to prevent duplicate triggers for the same alert + same price point
  // (idempotency for cron retries)
  fingerprint String @unique

  alert Alert @relation(fields: [alertId], references: [id], onDelete: Cascade)
}

model EmailLog {
  id          String   @id @default(cuid())
  to          String
  subject     String
  provider    String   @default("resend")
  providerId  String?
  status      String   @default("queued") // queued | sent | failed
  error       String?
  createdAt   DateTime @default(now())
}

model CronLock {
  name      String   @id
  lockedAt  DateTime
  expiresAt DateTime
}

model CronControl {
  id          Int      @id @default(1)
  cronEnabled Boolean  @default(true)
  updatedAt   DateTime @updatedAt
}

model EmailLog {
  id          String   @id @default(cuid())
  alertId     String
  to          String
  subject     String
  status      String   // sent | failed
  attempts    Int      @default(0)
  lastError   String?
  createdAt   DateTime @default(now())
  sentAt      DateTime?

  @@index([alertId])
}