generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  alerts Alert[]
}

model Alert {
  id        String   @id @default(cuid())
  userId   String
  metal    String
  direction String
  target   Decimal
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  alertTriggers AlertTrigger[]
}

model AlertTrigger {
  id          String   @id @default(cuid())
  alertId    String
  price      Decimal
  triggeredAt DateTime @default(now())

  alert Alert @relation(fields: [alertId], references: [id])
}

model SpotPriceCache {
  id        String   @id @default(cuid())
  metal     String
  price     Decimal
  createdAt DateTime @default(now())
}

model CronRun {
  id        String   @id @default(cuid())
  name      String
  status    String
  message   String?
  createdAt DateTime @default(now())
}
