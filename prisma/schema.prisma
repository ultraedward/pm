generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  alerts Alert[]
}

model Subscription {
  id                   String   @id @default(cuid())
  stripeSubscriptionId String?  @unique
  stripeCustomerId     String?
  status               String
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  userId               String?
  createdAt            DateTime @default(now())
}

model PriceHistory {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  createdAt DateTime @default(now())

  @@index([metal, createdAt])
}

model Alert {
  id        String   @id @default(cuid())
  userId    String
  metal     String
  target    Float
  direction String
  active    Boolean  @default(true)

  // Optional override; otherwise falls back to user.email
  email     String?

  createdAt DateTime @default(now())

  user     User           @relation(fields: [userId], references: [id])
  triggers AlertTrigger[]
  emails   EmailLog[]

  @@index([userId])
  @@index([metal])
}

model AlertTrigger {
  id          String   @id @default(cuid())
  alertId     String
  metal       String
  target      Float
  direction   String
  price       Float
  triggeredAt DateTime @default(now())

  // Prevent duplicate triggers during retries
  fingerprint String @unique

  alert Alert @relation(fields: [alertId], references: [id], onDelete: Cascade)

  @@index([alertId])
}

model EmailLog {
  id         String   @id @default(cuid())
  alertId    String
  to         String
  subject    String
  provider   String   @default("resend")
  providerId String?
  status     String   @default("queued") // queued | sent | failed
  attempts   Int      @default(0)
  lastError  String?
  createdAt  DateTime @default(now())
  sentAt     DateTime?

  alert Alert @relation(fields: [alertId], references: [id], onDelete: Cascade)

  @@index([alertId])
  @@index([status])
}

model CronLock {
  name      String   @id
  lockedAt  DateTime
  expiresAt DateTime
}

model CronControl {
  id          Int      @id @default(1)
  cronEnabled Boolean  @default(true)
  updatedAt   DateTime @updatedAt
}