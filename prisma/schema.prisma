generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PricePoint {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  createdAt DateTime @default(now())

  @@index([metal, createdAt])
}

model AlertEvent {
  id          String   @id @default(cuid())
  metal       String
  price       Float
  triggeredAt DateTime @default(now())

  @@index([metal, triggeredAt])
}

model AlertSettings {
  id           String   @id @default(cuid())
  goldThreshold   Float
  silverThreshold Float
  updatedAt    DateTime @updatedAt
}
