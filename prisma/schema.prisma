generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  alerts    Alert[]
}

model Alert {
  id          String   @id @default(cuid())
  userId      String
  metal       String
  direction   String
  targetPrice Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
  triggers    AlertTrigger[]
}

model AlertTrigger {
  id        String   @id @default(cuid())
  alertId   String
  price     Float
  createdAt DateTime @default(now())

  alert     Alert    @relation(fields: [alertId], references: [id])
}

model Price {
  id        String   @id @default(cuid())
  metal     String
  price     Float
  timestamp DateTime @default(now())

  @@index([metal, timestamp])
}

/**
 * SINGLETON SYSTEM STATUS ROW
 * Tracks alert engine health & activity
 */
model AlertSystemStatus {
  id              String   @id @default("singleton")
  lastRunAt       DateTime?
  lastTriggeredAt DateTime?
}
