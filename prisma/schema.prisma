// prisma/schema.prisma

model Metal {
  id        String         @id @default(cuid())
  name      String
  price     Float
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  history   PriceHistory[]
}

model PriceHistory {
  id        String   @id @default(cuid())
  metalId  String
  price     Float
  createdAt DateTime @default(now())

  metal Metal @relation(fields: [metalId], references: [id])
}
